#### SCRIPT DE PRUEBA

suma <- function(x, y, z){
  x + y + z
}

multiplication <- function(x, y, z){
  x * y * z
}

operation <- function(operation = c("suma","multiplication"), ...){
  operation <- match.arg(operation)
  dots <- list(...)                   #1
  if(length(dots) == 0) dots <- NULL 
  selected.operation <- switch(operation,
                               suma = do.call("suma", dots),
                               multiplication = do.call("multiplication", dots))
  selected.operation
}

args <- list(y=2,z=3)

dots <- expand.grid(list(x = 1:3, operation = c("suma","multiplication")), KEEP.OUT.ATTRS = FALSE,stringsAsFactors = FALSE)
dots


mapply(operation, operation = dots$operation, x = dots$x,MoreArgs = args, SIMPLIFY = FALSE, USE.NAMES = FALSE)
parallel::mcmapply(FUN = operation, operation = dots$operation, x = dots$x, MoreArgs = args, SIMPLIFY = FALSE, USE.NAMES = FALSE, mc.cores = 6L)


